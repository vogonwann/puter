<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>lol.janjic.puter</id>
  <name>Puter</name>
  <summary>Shopping List Manager</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  
  <launchable type="desktop-id">lol.janjic.puter.desktop</launchable>
  <provides>
    <id>lol.janjic.puter.desktop</id>
  </provides>
  
  <description>
    <p>
      A simple shopping list manager that helps you track your shopping expenses.
    </p>
    <p>Features:</p>
    <ul>
      <li>Create and manage multiple shopping lists</li>
      <li>Track items and their costs</li>
      <li>Mark items as bought</li>
      <li>View total expenses and statistics</li>
      <li>Supports multiple currencies based on system locale</li>
    </ul>
  </description>
  
  <screenshots>
    <screenshot type="default">
      <caption>Main overview with statistics</caption>
      <image>https://raw.githubusercontent.com/janjic/puter/main/screenshots/overview.png</image>
    </screenshot>
    <screenshot>
      <caption>Creating a new shopping list</caption>
      <image>https://raw.githubusercontent.com/janjic/puter/main/screenshots/new-list.png</image>
    </screenshot>
    <screenshot>
      <caption>Editing items and costs</caption>
      <image>https://raw.githubusercontent.com/janjic/puter/main/screenshots/edit-list.png</image>
    </screenshot>
  </screenshots>
  
  <url type="homepage">https://github.com/janjic/puter</url>
  
  <developer_name>Janjic</developer_name>
  
  <content_rating type="oars-1.1"/>
  
  <releases>
    <release version="1.0.0" date="2024-01-01">
      <description>
        <p>Initial release</p>
        <ul>
          <li>Create and manage shopping lists</li>
          <li>Track expenses with locale-aware currency formatting</li>
          <li>View statistics and totals</li>
          <li>Edit and delete lists</li>
        </ul>
      </description>
    </release>
    <release version="0.1.0" date="2024-03-14"/>
  </releases>
</component> 